<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NS.MBX_amarin.View.PagoServicioEmpresaView"
             Title="Pago de Servicios">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Frame HorizontalOptions="FillAndExpand" Padding="10" BackgroundColor="LightGray" >
                <Label  Text="Ingresa los datos"  TextColor="Black" FontSize="Medium"
                HorizontalOptions="FillAndExpand" />
            </Frame>

            <StackLayout Padding="20,0,20,0" >
                <Label x:Name="lblServicio"  Text="lblServicio" FontSize="Small" FontAttributes="Bold" />
                <Label x:Name="lblEmpresa"  Text="lblEmpresa" FontSize="Small"  />
                <Label x:Name="lblCodigo"  Text="lblCodigo" FontSize="Small"  />

                <Label  Text="Monto a pagar S/" FontSize="Small" FontAttributes="Bold" />
                <Entry x:Name="entMonto" HorizontalOptions="FillAndExpand" Keyboard="Numeric" />
                <Label x:Name="lblTipoCambio" Text="lblTipoCambio a pagar S/" FontSize="Small" FontAttributes="Bold" />

                <Button x:Name="btnSiguiente" Clicked="EventoSiguiente" Text="Siguiente" HorizontalOptions="FillAndExpand" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>